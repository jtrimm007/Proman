@model Proman.Models.ViewModels.RemoveRoleVM

@{
    ViewData["Title"] = "RemoveRoleFromPerson";
}

<h1>RemoveRoleFromPerson</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RemoveRoleVM</h4>
    <hr />
    <form asp-action="RemoveRole">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PersonId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PersonName)
                <input hidden name="PersonId" value="@Model.PersonId" asp-for="@Model.PersonId" />

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProjectId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProjectName)
                <input hidden name="ProjectId" value="@Model.ProjectId" asp-for="@Model.ProjectId" />

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserRoles)

            </dt>
            <dd class="col-sm-10">
                <select name="RoleId" id="RoleId">
                    @foreach (var each in Model.UserRoles)
                    {
                        <option value="@each.Id">
                            @Html.DisplayFor(modelItem => each.Name)

                        </option>
                    }
                </select>
            </dd>
        </dl>



        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.ProjectId">
            Back to Project Details
        </a>
    </form>
</div>
