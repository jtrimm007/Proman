@model Proman.Models.ViewModels.RemovePersonProjectRoleVM

@{
    ViewData["Title"] = "RemovePersonFromProject";
}

<h1>RemovePersonFromProject</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RemovePersonProjectRoleVM</h4>
    <hr />
    <dl class="row">
    </dl>


    <form asp-action="RemovePerson">
        <strong>Project Name: </strong>@Html.DisplayFor(modelItem => Model.ProjectName)<br />
        <input hidden name="ProjectId" value="@Model.ProjectId" asp-for="@Model.ProjectId" />
        <strong>Person Name: </strong>@Html.DisplayFor(modelItem => Model.UserName)<br />
        <input hidden name="UserId" value="@Model.UserId" asp-for="@Model.UserId" />

        <strong>Person's Roles: </strong><br />

        @foreach (var role in Model.UserRoles)
        {

            @Html.DisplayFor(modelItem => role.Name)
        }
        <br />
        <input type="submit" value="Yes, Remove" class="btn btn-danger" /> |

        <a class="btn btn-primary" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.ProjectId">
            Back to Project Details
        </a>
    </form>
</div>
